{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@fline/authentication": ["libs/authentication/src/index.js"],
      "@fline/base": ["libs/base/src/index.js"],
      "@fline/mailer": ["libs/mailer/src/index.js"],
      "@fline/security": ["libs/security/src/index.js"],
      "@fline/sequelize": ["libs/sequelize/src/index.js"],
      "@fline/user": ["libs/user/src/index.js"],
      "@fline/verify-token": ["libs/verify-token/src/index.js"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
